<!-- Font Awesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<!-- Slick Slider CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">

<style>
  .collection-slider-sec {
    padding: 30px 0;
  }

  .collection-slider-container {
    max-width: 1380px;
    width: 100%;
    margin: 0 auto;
    padding: 0 50px;
  }

  .collection-slider-heading {
    margin-bottom: 10px;
  }

  .collection-slider-title {
    color: #343132;
    text-align: center;
    margin-bottom: 24px;
    font-size: 28px;
    font-weight: 500;
  }

  .slider-item.slick-slide {
    padding: 0 15px;
  }

  .collection-slider-img {
    width: 100%;
    height: 370px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 10px;
  }

  /* Slider main relative */
  .collection-slider-main {
    position: relative;
  }

  /* Custom arrows container */
  .collection-slick-nav {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none; /* wrap container non-clickable */
    z-index: 5;
  }

  /* Arrow wrap divs */
  .slick-prev-wrap,
  .slick-next-wrap {
    position: relative; /* button absolute ke liye parent relative */
  }

  /* Custom buttons style */
  .collection-slider-btn {
    width: 40px;
    height: 40px;
    background: rgba(0,0,0,0.3);
    border-radius: 50%;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    pointer-events: auto; /* button clickable */
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    transition: background 0.3s;
  }

  .collection-slider-btn.prev {
    left: 10px;
  }

  .collection-slider-btn.next {
    right: 10px;
  }

  .collection-slider-btn:hover {
    background: rgba(0,0,0,0.6);
  }

  .collection-slider-btn i {
    color: #fff;
    font-size: 16px;
  }

  /* Responsive adjustments */
  @media (max-width: 992px) {
    .collection-slider-title {
      font-size: 24px;
    }
    .collection-slider-btn {
      width: 35px;
      height: 35px;
    }
  }

  @media (max-width: 600px) {
    .collection-slider-title {
      font-size: 20px;
    }
    .collection-slider-btn {
      width: 30px;
      height: 30px;
    }
  }
</style>

<section class="collection-slider-sec">
  <div class="collection-slider-container">
    <div class="collection-slider-heading">
      <h2 class="collection-slider-title">{{ section.settings.collection_heading }}</h2>
    </div>

    <div class="collection-slider-main">
      <div class="slick-slider">
        {% for block in section.blocks %}
          <div class="slider-item">
            {% if block.settings.collection_image != blank %}
              <img
                class="collection-slider-img"
                src="{{ block.settings.collection_image | img_url: 'master' }}"
                alt=""
              >
            {% endif %}
            <div class="collection-text">
              <h3 class="collection-slider-subtitle">
                {{ block.settings.collection_subtitle }}
              </h3>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="collection-slick-nav">
        <div class="slick-prev-wrap">
          <button class="collection-slider-btn prev">
            <i class="fa-solid fa-arrow-left"></i>
          </button>
        </div>
        <div class="slick-next-wrap">
          <button class="collection-slider-btn next">
            <i class="fa-solid fa-arrow-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

<script>
  $(document).ready(function () {
    var $slider = $('.collection-slider-main .slick-slider');

    $slider.slick({
      slidesToShow: 3.2,
      slidesToScroll: 1,
      arrows: false, 
      dots: false,
      autoplay: false,
      infinite: false,
      rtl: false,
      responsive: [
        { breakpoint: 992, settings: { slidesToShow: 2 } },
        { breakpoint: 600, settings: { slidesToShow: 1 } },
      ],
    });

    $('.collection-slider-btn.prev').on('click', function () {
      $slider.slick('slickPrev');
    });

    $('.collection-slider-btn.next').on('click', function () {
      $slider.slick('slickNext');
    });

    var totalSlides = $slider.slick('getSlick').slideCount;
    $slider.slick('slickGoTo', totalSlides - 1, true);
  });
</script>

{% schema %}
{
  "name": "Collection Slider",
  "settings": [
    {
      "type": "text",
      "id": "collection_heading",
      "label": "Collection Heading"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Slider Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "collection_subtitle",
          "label": "Subtitle"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Collection Slider"
    }
  ]
}
{% endschema %}
