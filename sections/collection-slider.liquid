<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">

<style>
  .collection-slider-sec {
    padding: 30px 0;
  }

  .collection-slider-container {
    max-width: 1380px;
    width: 100%;
    margin: 0 auto;
    padding: 0 50px;
  }

  .collection-slider-heading {
    margin-bottom: 10px;
  }

  .collection-slider-title {
    color: #343132;
    text-align: center;
    margin-bottom: 24px;
    font-size: 28px;
    font-weight: 500;
  }

  .slider-item.slick-slide {
    padding: 0 15px;
   }
  .collection-slider-img {
    width: 100%;
    height: 370px;
    object-fit: cover;
    overflow: hidden;
    border-radius: 10px;
    margin: 0 0 10px;
  }
</style>

<section class="collection-slider-sec">
  <div class="collection-slider-container">
    <div class="collection-slider-heading">
      <h2 class="collection-slider-title">{{ section.settings.collection_heading }}</h2>
    </div>

    <div class="collection-slider-main">
      <div class="slick-slider">
        {% for block in section.blocks %}
          <div class="slider-item">
            {% if block.settings.collection_image != blank %}
              <img
                class="collection-slider-img"
                src="{{ block.settings.collection_image | img_url: 'master' }}"
                alt=""
              >
            {% endif %}
            <div class="collection-text">
              <h3 class="collection-slider-subtitle">{{ block.settings.collection_subtitle }}</h3>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
<script>
  $(document).ready(function () {
    var $slider = $('.collection-slider-main .slick-slider');

    $slider.slick({
      slidesToShow: 3.2,
      slidesToScroll: 1,
      arrows: true,
      dots: false,
      autoplay: false,
      infinite: false,
      rtl: false, // RTL disabled
      responsive: [
        {
          breakpoint: 992,
          settings: {
            slidesToShow: 2,
          },
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 1,
          },
        },
      ],
    });

    // Right se start karne ke liye last slide index par jump
    var totalSlides = $slider.slick('getSlick').slideCount;
    $slider.slick('slickGoTo', totalSlides - 1, true); // true = no animation
  });
</script>

{% schema %}
{
  "name": "Collection Slider",
  "settings": [
    {
      "type": "text",
      "id": "collection_heading",
      "label": "Collection Heading"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Slider Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "collection_subtitle",
          "label": "Subtitle"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Collection Slider"
    }
  ]
}
{% endschema %}
