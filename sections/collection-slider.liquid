<!-- Owl Carousel CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"/>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Owl Carousel JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<style>
  .collection-slider-sec {
    padding: 30px 0;
  }

  .collection-slider-container {
    max-width: 1380px;
    width: 100%;
    margin: 0 auto;
    padding: 0 50px;
  }

  .collection-slider-heading {
    margin-bottom: 10px;
  }

  .collection-slider-title {
    color: #343132;
    text-align: center;
    margin-bottom: 24px;
    font-size: 28px;
    font-weight: 500;
  }

  .owl-carousel .item {
    text-align: center;
  }

  .collection-slider-img {
    width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .collection-slider-subtitle {
    margin-top: 10px;
    font-size: 16px;
    color: #555;
  }
</style>

<section class="collection-slider-sec">
  <div class="collection-slider-container">
    <div class="collection-slider-heading">
      <h2 class="collection-slider-title">{{ section.settings.collection_heading }}</h2>
    </div>

    <div class="collection-slider-main">
      <div class="owl-carousel owl-theme">
        {% for block in section.blocks %}
          <div class="item">
            {% if block.settings.collection_image != blank %}
              <img
                class="collection-slider-img"
                src="{{ block.settings.collection_image | img_url: 'master' }}"
                alt=""
              >
            {% endif %}
            <div class="collection-text">
              <h3 class="collection-slider-subtitle">{{ block.settings.collection_subtitle }}</h3>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function () {
    $('.collection-slider-sec .owl-carousel').owlCarousel({
      items: 4,
      loop: true,
      margin: 20,
      nav: true,
      dots: false,
      autoplay: true,
      autoplayTimeout: 3000,
      responsive: {
        0: { items: 1 },       // Mobile
        600: { items: 2 },     // Tablet
        992: { items: 4 },     // Desktop
      }
    });
  });
</script>

{% schema %}
{
  "name": "Collection Slider",
  "settings": [
    {
      "type": "text",
      "id": "collection_heading",
      "label": "Collection Heading"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Slider Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "collection_subtitle",
          "label": "Subtitle"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Collection Slider"
    }
  ]
}
{% endschema %}
