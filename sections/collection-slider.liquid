<!-- Font Awesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<!-- Slick Slider CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">

<style>
  .collection-slider-sec {
    padding: 30px 0;
  }

  .collection-slider-container {
    max-width: 1380px;
    width: 100%;
    margin: 0 auto;
    padding: 0 50px;
  }

  .collection-slider-heading {
    margin-bottom: 10px;
  }

  .collection-slider-title {
    color: #343132;
    text-align: center;
    margin-bottom: 24px;
    font-size: 28px;
    font-weight: 500;
  }

  .slider-item.slick-slide {
    padding: 0 15px;
  }

  .collection-slider-img {
    width: 100%;
    height: 370px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 10px;
  }

  .collection-slider-main {
    position: relative;
  }

  .collection-slick-nav {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none; 
    z-index: 5;
  }

  .slick-prev-wrap,
  .slick-next-wrap {
    position: relative;
  }

  .collection-slider-btn {
    width: 60px;
    height: 60px;
    background: #ffffff;
    border-radius: 50%;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    pointer-events: auto;
    position: absolute;
    top: 50%;
    font-size: 14px;
    transform: translateY(-50%);
    transition: background 0.3s;
  }

  .collection-slider-btn.prev {
    left: 10px;
  }

  .collection-slider-btn.next {
    right: 10px;
  }

  .collection-slider-btn:hover {
    background: rgb(136 112 112 / 60%);
  }

  .collection-slider-btn i {
    color: #000000;
    font-size: 16px;
  }

  /* Responsive adjustments */
  @media (max-width: 992px) {
    .collection-slider-title {
      font-size: 24px;
    }
    .collection-slider-btn {
      width: 35px;
      height: 35px;
    }
  }

  @media (max-width: 600px) {
    .collection-slider-title {
      font-size: 20px;
    }
    .collection-slider-btn {
      width: 30px;
      height: 30px;
    }
  }
</style>

<section class="collection-slider-sec">
  <div class="collection-slider-container">
    <div class="collection-slider-heading">
      <h2 class="collection-slider-title">{{ section.settings.collection_heading }}</h2>
    </div>

    <div class="collection-slider-main">
      <div class="slick-slider">
        {% for block in section.blocks %}
          <div class="slider-item">
            {% if block.settings.collection_image != blank %}
              <img
                class="collection-slider-img"
                src="{{ block.settings.collection_image | img_url: 'master' }}"
                alt=""
              >
            {% endif %}
            <div class="collection-text">
              <h3 class="collection-slider-subtitle">
                {{ block.settings.collection_subtitle }}
              </h3>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="collection-slick-nav">
        <div class="slick-prev-wrap">
          <button class="collection-slider-btn prev">
            <i class="fa-solid fa-arrow-left"></i>
          </button>
        </div>
        <div class="slick-next-wrap">
          <button class="collection-slider-btn next">
            <i class="fa-solid fa-arrow-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

<script>
$(document).ready(function () {

  var $slider = $('.collection-slider-main .slick-slider');
  var $prev = $('.collection-slider-btn.prev');
  var $next = $('.collection-slider-btn.next');

  /* ðŸ”¹ SLICK INIT */
  $slider.slick({
    slidesToShow: 3.2,
    slidesToScroll: 1,
    arrows: false, // custom buttons
    dots: false,
    autoplay: false,
    infinite: false, // finite slides
    rtl: false,
    responsive: [
      { breakpoint: 992, settings: { slidesToShow: 2 } },
      { breakpoint: 600, settings: { slidesToShow: 1 } }
    ]
  });

  function updateArrows() {
    var current = $slider.slick('slickCurrentSlide');
    var total = $slider.slick('getSlick').slideCount;

    if (current === 0) {
      $prev.css('opacity', 0.3); // disable left arrow
    } else {
      $prev.css('opacity', 1);
    }

    if (current >= total - $slider.slick('slickGetOption', 'slidesToShow')) {
      $next.css('opacity', 0.3); 
    } else {
      $next.css('opacity', 1);
    }
  }

  updateArrows();

  $slider.on('afterChange', function () {
    updateArrows();
  });

  $prev.on('click', function () {
    $slider.slick('slickPrev');
  });

  $next.on('click', function () {
    $slider.slick('slickNext');
  });

});

</script>

{% schema %}
{
  "name": "Collection Slider",
  "settings": [
    {
      "type": "text",
      "id": "collection_heading",
      "label": "Collection Heading"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Slider Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "collection_subtitle",
          "label": "Subtitle"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Collection Slider"
    }
  ]
}
{% endschema %}
