<style>
          .three-images-sec{
              padding: 40px 0;
          }

          .three-images-container{
              max-width: 1337x;
              margin: 0 auto;
              padding: 0 40px;
          }

          .main-heding-top {
      font-size: 40px;
      color: #454545;
      text-align: center;
      margin: 0;
  }

  .main-description p {
      font-size: 21px;
      color: #454545;
      text-align: center;
      max-width: 68%;
      margin: 0 auto;
      line-height: 28px;
      letter-spacing: 0;
      padding-top: 17px;
      padding-bottom: 28px;
  }

  .main-flex-collect-main-div {
      display: flex
  ;
      justify-content: space-between;
      flex-wrap: wrap;
      column-gap: 15px;
      padding-top: 10px;
  }

  .three-boxes-rept {
      width: 32%;
  }

  .img-collect {
      position: relative;
      height: 0;
      padding-bottom: 330px;
      overflow: hidden;
      border-radius: 20px;
  }

  .three-repeat-images {
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .title-block p {
      font-size: 20px;
      line-height: 22px;
      color: #454545;
      text-align: center;
      margin: 0;
      letter-spacing: 0;
      padding-top: 32px;
  }
</style>
<section class="three-images-sec">
  <div class="three-images-container">
    <div class="main-description">
      <h2 class="main-heding-top">{{ section.settings['h2-heading-main'] }}</h2>
      <p>
        {{ section.settings['main-top-para'] }}
      </p>
    </div>
    <div class="three-images-flex">
      <div class="title-main">
        <div class="main-flex-collect-main-div">
          {% for block in section.blocks %}
            <div class="three-boxes-rept">
              <div class="img-collect">
                {% if block.settings.main_image !=blank %}
                  <img src="{{ block.settings.main_image | img_url:'master' }}" alt="" class="three-repeat-images">
                {% endif %}
              </div>
              <div class="title-block">
                {{ block.settings.other_para }}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Three Boxes",
  "settings": [
    {
      "type": "text",
      "id": "h2-heading-main",
      "label": "First Heading"
    },
    {
      "type": "text",
      "id": "main-top-para",
      "label": "Top Para"
    }
  ],
  "blocks": [
    {
      "type": "three-boxes",
      "name": "Three Boxes",
      "settings": [
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Three Image"
        },
        {
          "type": "richtext",
          "id": "other_para",
          "label": "Main Rich"
        },
      ],
    },
  ],
  "presets": [
    {
    "name": "Three Boxes",
    },
  ],
}
{% endschema %}
