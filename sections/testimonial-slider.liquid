<style>
  .testimonial-section {
    background: linear-gradient(135deg, #1c1c1c, #2c2c2c);
    padding: 40px 0;
  }

  .testimonial-container {
    max-width: 1100px;
    padding: 0 20px; /* Mobile ke liye thoda padding kam */
    margin: 0 auto;
  }

  .testimonial-heading {
    font-size: 54px;
    font-weight: 700;
    background: linear-gradient(180deg, #7458ff, #b4008e, #ff7a1a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'Poppins', sans-serif;
  }

  .custom-nav {
    text-align: center;
    display: flex;
    gap: 10px;
  }

  .custom-prev, .custom-next {
    padding: 10px 14px;
    background: #302c2c;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .custom-prev:hover, .custom-next:hover {
    background: #443b42;
  }

  .text-arrow-flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    flex-wrap: wrap;
    gap: 15px;
  }

  .testimonial-description p {
    color: #9c8d8d;
    font-size: 12px;
    max-width: 68%;
    letter-spacing: 0;
  }

  .slider-description p {
    font-size: 10px;
    color: #cccccc;
    text-align: center;
  }

  .testimonials-image {
    height: 40px;
    width: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 5px;
  }

  .user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: auto;
    padding-top: 10px;
  }

  .stars {
    text-align: center;
    color: #c1a825;
    padding: 10px 0;
  }

  .testimonial-card {
    height: 310px;
    width: 280px;
    background: #1a1818;
    padding: 15px;
    border-radius: 6px;
    display: flex;
    flex-direction: column;
  }

  .role-name {
    margin-top: 5px;
    color: #cccccc;
    font-size: 12px;
    font-weight: 400;
  }

  .role-wrap span {
    color: #8a8a8a;
    font-size: 10px;
    font-weight: 400;
  }

  .role-wrap {
    line-height: 10px;
  }

  /* Responsive font & card adjustments */
  @media (max-width: 1024px) {
    .testimonial-heading { font-size: 42px; }
    .testimonial-card { width: 240px; }
  }

  @media (max-width: 768px) {
    .testimonial-heading { font-size: 36px; }
    .testimonial-card { width: 220px; }
  }

  @media (max-width: 480px) {
    .testimonial-heading { font-size: 28px; }
    .testimonial-card { width: 200px; }
    .text-arrow-flex { flex-direction: column; gap: 10px; }
  }
</style>

<section class="testimonial-section">
  <div class="testimonial-container">
    <div class="text-arrow-flex">
      <div class="heading">
        <h2 class="testimonial-heading">{{ section.settings.testimonial_text }}</h2>
        <div class="testimonial-description">
          {{ section.settings.testimonial_para }}
        </div>
      </div>
      <div class="custom-nav">
        <button class="custom-prev"><i class="fa-solid fa-arrow-left-long"></i></button>
        <button class="custom-next"><i class="fa-solid fa-arrow-right-long"></i></button>
      </div>
    </div>
    <div class="customer-main-conntent">
      <div class="slider-content">
        <div class="owl-carousel owl-theme">
          {% for block in section.blocks %}
            <div class="item">
              <div class="testimonial-card">
                <div class="slider-description">
                  {{ block.settings.text_description }}
                </div>
                <div class="stars">
                  {{ block.settings.stars_logos }}
                </div>
                <div class="user-info">
                  {% if block.settings.testimonials_image != blank %}
                    <img
                      class="testimonials-image"
                      src="{{ block.settings.testimonials_image | img_url: 'master' }}"
                      alt="{{ block.settings.testimonials_image.alt | escape }}"
                    >
                  {% endif %}
                  <h4 class="role-name">{{ block.settings.name_heading }}</h4>
                  <div class="role-wrap">
                    <span>{{ block.settings.role_heading }}</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  var owl = $('.owl-carousel');
  owl.owlCarousel({
    loop: true,
    autoplay: false,
    margin: 15,
    nav: false,
    dots: false,
    center: true, // Centering items for peek effect
    responsive: {
      0: { items: 1.5 },      // Mobile
      480: { items: 2 },      // Small tablet
      768: { items: 3 },      // Tablet
      1024: { items: 3.5 },   // Desktop
    },
  });

  // Custom nav
  $('.custom-next').click(function () { owl.trigger('next.owl.carousel'); });
  $('.custom-prev').click(function () { owl.trigger('prev.owl.carousel'); });
</script>
