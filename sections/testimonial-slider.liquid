<style>
  .testimonial-section {
    background: linear-gradient(135deg, #1c1c1c, #2c2c2c);
    padding: 40px 0;
  }

  .testimonial-container {
    max-width: 1200px;
    padding: 0 50px;
    margin: 0 auto;
  }

  .testimonial-heading {
    font-size: 54px;
    font-weight: 700;
    background: linear-gradient(180deg, #7458ff, #b4008e, #ff7a1a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'Poppins', sans-serif;
  }
</style>
<section class="testimonial-section">
  <div class="testimonial-container">
    <div class="heading">
      <h2 class="testimonial-heading">{{ section.settings.testimonial_text }}</h2>

      <div class="testimonial-description">
        {{ section.settings.testimonial_para }}
      </div>
    </div>

    <div class="owl-carousel owl-theme">
      {% for block in section.blocks %}
        <div class="item">
          <div class="testimonial-card">
            <div class="slider-description">
              {{ block.settings.text_description }}
            </div>

            <div class="stars">
              {{ block.settings.stars_logos }}
            </div>

            <div class="user-info">
              {% if block.settings.testimonials_image != blank %}
                <img
                  class="testimonials-image"
                  src="{{ block.settings.testimonials_image | img_url: 'master' }}"
                  alt="{{ block.settings.testimonials_image.alt | escape }}"
                >
              {% endif %}

              <h4>{{ block.settings.name_heading }}</h4>

              <div class="role-wrap">
                <span>{{ block.settings.role_heading }}</span>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  $('.owl-carousel').owlCarousel({
    loop: true,
    autoplay: false,
    autoplayTimeout: 1000,
    margin: 10,
    nav: false,
    dots: false,
    responsive: {
      0: {
        items: 1,
      },
      600: {
        items: 3,
      },
      1000: {
        items: 5,
      },
    },
  });
</script>

{% schema %}
{
  "name": "Testimonial Slider",
  "settings": [
    {
      "type": "text",
      "id": "testimonial_text",
      "label": "Testimonial Text"
    },
    {
      "type": "richtext",
      "id": "testimonial_para",
      "label": "Testimonial Description"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "richtext",
          "id": "text_description",
          "label": "Text Description"
        },
        {
          "type": "text",
          "id": "stars_logos",
          "label": "Stars Logos"
        },
        {
          "type": "image_picker",
          "id": "testimonials_image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name_heading",
          "label": "Customer Name"
        },
        {
          "type": "text",
          "id": "role_heading",
          "label": "Customer Role"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial Slider"
    }
  ]
}
{% endschema %}
