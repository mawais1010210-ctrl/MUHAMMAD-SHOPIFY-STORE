<style>
   .larkspur-baby-sec {
         padding: 30px 0;
   }

   .larkspur-calender-image-main{
         position: relative;
    }

   .banner-video-div {
       position: relative;
       height: 100vh;
    }

   .video-customer {
       height: 100%;
       width: 100%;
       position: absolute;
       left: 0;
       right: 0;
       bottom: 0;
       top: 0;
       object-fit: cover;
   }

   .video-banner-content-main {
     display: flex;
     align-items: flex-start;
     justify-content: end;
     flex-direction: column;
     gap: 50px;
  }

  .video-banner-title {
       font-size: 64px;
       color: #fff;
  }

  .video-banner-button {
     font-size: 16px;
     display: flex;
     align-items: center;
     background: #ffffff;
     padding: 22px 37px 26px;
     line-height: 1;
     width: fit-content;
     border-radius: 12px;
   }

  .button-video-link {
   color: #000000;
   text-decoration: none;
   font-weight: 600;
   font-size: 16px;
  }

  .banner-text-div {
       position: absolute;
       top: 50%;
       left: 50%;
       right: 0;
       bottom: 0;
       transform: translate(-50%, -50%);
       width: 100%;
       height: 100%;
       display: flex;
       padding: 80px;
   }
</style>
<section class="larkspur-baby-sec">
  <div class="larkspur-baby-container">
    <div class="larkspur-baby-calender-flex">
      <div class="larkspur-calender-image-main">
        <div class="banner-video-div">
          <video playsinline autoplay loop muted class="video-customer">
            {% if section.settings['banner-video'] != blank %}
              <source src="{{ section.settings.banner-video.sources[0].url }}">
            {% endif %}
          </video>
        </div>
        <div class="banner-text-div">
          <div class="video-banner-content-main">
            <h3 class="video-banner-title">{{ section.settings['banner-heading-desc'] }}</h3>
            <div class="video-banner-button">
              <a href="#" class="button-video-link">{{ section.settings['banner-shop-btn'] }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Larkspur Baby Banner",
  "settings": [
    {
      "type": "video",
      "id": "banner-video",
      "label": "Banner Video"
    },
    {
      "type": "text",
      "id": "banner-heading-desc",
      "label": "Banner Heading"
    },
    {
      "type": "text",
      "id": "banner-shop-btn",
      "label": "Banner Button"
    }
  ],
  "presets": [
    {
      "name": "Larkspur Baby Banner"
    }
  ]
}
{% endschema %}
