<style>
  
  .larkspur-baby-sec {
      padding: 30px 0;
  }

  .larkspur-calender-image-main {
      position: relative;
  }

  .banner-video-div {
      position: relative;
      width: 100%;
      height: 100vh; /* full viewport */
      overflow: hidden;
  }

  .video-customer {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      top: 0;
      left: 0;
  }

  .banner-text-div {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      max-width: 1200px;
      padding: 0 80px;
      box-sizing: border-box;
      display: flex;
      justify-content: flex-end;
      align-items: flex-start;
  }

  .video-banner-content-main {
      display: flex;
      flex-direction: column;
      gap: 50px;
  }

  .video-banner-title {
      font-size: 64px;
      color: #fff;
  }

  .video-banner-button {
      font-size: 16px;
      display: flex;
      align-items: center;
      background: #ffffff;
      padding: 22px 37px 26px;
      line-height: 1;
      width: fit-content;
      border-radius: 12px;
  }

  .button-video-link {
      color: #000000;
      text-decoration: none;
      font-weight: 600;
      font-size: 16px;
  }

  /* Desktop */
  @media (min-width: 1025px) {
      .video-banner-title {
          font-size: 64px;
      }
      .video-banner-button {
          padding: 22px 37px 26px;
          font-size: 16px;
      }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1024px) {
      .banner-video-div {
          height: 80vh; /* reduce height */
      }
      .banner-text-div {
          padding: 0 50px;
      }
      .video-banner-title {
          font-size: 48px;
      }
      .video-banner-button {
          padding: 18px 30px 22px;
          font-size: 14px;
      }
  }

  /* Mobile */
  @media (max-width: 767px) {
      .banner-video-div {
          height: 60vh; /* reduce height for mobile */
      }
      .banner-text-div {
          padding: 0 20px;
          justify-content: center;
          align-items: center;
          transform: translate(-50%, -50%);
      }
      .video-banner-content-main {
          align-items: center;
          text-align: center;
          gap: 20px;
      }
      .video-banner-title {
          font-size: 32px;
      }
      .video-banner-button {
          padding: 14px 20px 18px;
          font-size: 14px;
      }
  }
</style>
<section class="larkspur-baby-sec">
  <div class="larkspur-baby-container">
    <div class="larkspur-baby-calender-flex">
      <div class="larkspur-calender-image-main">
        <div class="banner-video-div">
          <video playsinline autoplay loop muted class="video-customer">
            {% if section.settings['banner-video'] != blank %}
              <source src="{{ section.settings.banner-video.sources[0].url }}">
            {% endif %}
          </video>
        </div>
        <div class="banner-text-div">
          <div class="video-banner-content-main">
            <h3 class="video-banner-title">{{ section.settings['banner-heading-desc'] }}</h3>
            <div class="video-banner-button">
              <a href="#" class="button-video-link">{{ section.settings['banner-shop-btn'] }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Larkspur Baby Banner",
  "settings": [
    {
      "type": "video",
      "id": "banner-video",
      "label": "Banner Video"
    },
    {
      "type": "text",
      "id": "banner-heading-desc",
      "label": "Banner Heading"
    },
    {
      "type": "text",
      "id": "banner-shop-btn",
      "label": "Banner Button"
    }
  ],
  "presets": [
    {
      "name": "Larkspur Baby Banner"
    }
  ]
}
{% endschema %}
