<div class="collection-list-container-{{ section.id }}">
  {% for block in section.blocks %}
    <a class="collection-link-{{ section.id }}" href="{{ block.settings.collection_link }}">
      <img class="collection-image-{{ section.id }}" src="{{ block.settings.collection_image | img_url:'master' }}">
    </a>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Collection List GM",
  "settings": [],
  "blocks": [
    {
      "type": "collection-list",
      "name": "collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Select Image"
        },
        {
          "type": "url",
          "id": "collection_link",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List GM"
    }
  ]
}
{% endschema %}
