<style>
.larkspur-video-text-sec {
  padding: 30px 0;
  overflow-x: hidden;
}

.larkspur-video-container {
  max-width: 1600px;
  margin: 0 auto;
  padding: 0 40px;
  box-sizing: border-box;
}

.larkspur-video-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.larkspur-text {
  width: 44%;
}

.video-title-text {
  font-size: 44px;
  font-weight: 400;
  margin: 12px 0 30px 0;
  color: #000;
  line-height: 100%;
}

.video-text-description {
  width: 94%;
}

.video-text-description p {
  font-size: 16px;
  color: #000;
  font-weight: 400;
  margin: 0 0 16px;
  letter-spacing: 0;
}

.larkspur-video {
  width: 47%;
}

.video-main-second-div {
  padding-top: 81%;
  position: relative;
}

.video-plays {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  object-fit: cover;
  right: 0;
  border-radius: 20px;
}

/* Video Position Left / Right */
.larkspur-video-flex.video-left {
  flex-direction: row; /* Video left, text right */
}
.larkspur-video-flex.video-right {
  flex-direction: row-reverse; /* Video right, text left */
}

/* Mobile Responsive */
@media screen and (max-width: 767px) {
  .larkspur-video-flex {
    flex-direction: column !important;
    align-items: center;
  }

  .larkspur-text,
  .larkspur-video,
  .video-text-description {
    width: 100% !important;
  }

  .larkspur-video-container {
    padding: 0 10px;
  }

  .video-text-description p {
    font-size: 14px;
  }

  .video-title-text {
    font-size: 32px;
    font-weight: 500;
    margin: 12px 0 20px 0;
  }
}
</style>

<section class="larkspur-video-text-sec">
  <div class="larkspur-video-container">
    <div class="larkspur-video-flex {% if section.settings.video_position == 'left' %}video-left{% else %}video-right{% endif %}">
      
      <div class="larkspur-text">
        <div class="text-heading">
          <h3 class="video-title-text">
            {{ section.settings.heading_text }}
          </h3>
        </div>
        <div class="video-text-description">
          {{ section.settings.text_description }}
        </div>
      </div>

      <div class="larkspur-video">
        <div class="video-main-upper">
          <div class="video-main-second-div">
            {% if section.settings.larkspur_video != blank %}
              {% assign video_sources = section.settings.larkspur_video.sources %}
              {% if video_sources.size > 0 %}
                <video
                  autoplay
                  playsinline
                  muted
                  loop
                  controls
                  class="video-plays"
                  loading="eager"
                  poster="//larkspurbaby.com/cdn/shop/files/poster-image-video.png?v=1754292266"
                  src="{{ video_sources[0].url }}"
                ></video>
              {% endif %}
            {% endif %}
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Larkspur Video Text",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text"
    },
    {
      "type": "richtext",
      "id": "text_description",
      "label": "Text Description"
    },
    {
      "type": "video",
      "id": "larkspur_video",
      "label": "Larkspur Video"
    },
    {
      "type": "select",
      "id": "video_position",
      "label": "Video Position",
      "default": "right",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Larkspur Video Text"
    }
  ]
}
{% endschema %}
