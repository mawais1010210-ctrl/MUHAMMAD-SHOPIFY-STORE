  "blocks": [
    {
      "type": "Slider",
      "name": "Slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "slider_image",
          "label": "Image Img"
        },
        {
          "type": "richtext",
          "id": "slider-heading",
          "label": "Slider Heading"
        },
        {
          "type": "textarea",
          "id": "slider-description",
          "label": "Slider Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Golime Slider"
    }
  ]
}
{% endschema %}
