<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.6.0/css/all.min.css"
  rel="stylesheet"
>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<style>
    .hover-images-flex {
        display: flex;
        justify-content: space-between;
    }

    .block-repeat-hover-card {
        width: 25%;
        border-top: 1px solid #ccc;
        border-right: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        position: relative;
    }

    .block-card-anker {
        text-decoration: none;
        display: block;
    }

    .block-hover-image-card {
        position: relative;
        height: 0;
        padding-bottom: 120%;
    }

    .show-image,
    .hover-image {
        position: absolute;
        height: 100%;
        width: 100%;
        object-fit: cover;
        top: 0;
        left: 0;
        transition: all 0.3s ease-in-out;
    }

    .hover-image {
        opacity: 0;
    }

    .block-repeat-hover-card:hover .hover-image {
        opacity: 1;
    }

    .block-repeat-hover-card:hover .show-image {
        opacity: 0.3;
    }

    .title-block-col {
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease-in-out;
        border-top: 1px solid #cacaca;
        padding: 18px 0;
        position: relative;
    }

    .title-block-col .arrow-image {
        opacity: 0;
        margin-left: 10px;
        color: #000000;
        font-size: 12px;
        transition: all 0.3s ease-in-out;
        display: inline-block;
    }

    .block-repeat-hover-card:hover .title-block-col .arrow-image {
        opacity: 1;
        width: 20px;
        visibility: visible;
    }

    .title-card {
        font-size: 14px;
        letter-spacing: 1px;
        color: #181818;
        font-family: TestDomaineDisplayRegular;
        text-transform: uppercase;
        margin: 0;
        transition: all 0.3s ease-in-out;
    }

    @media (max-width: 767px) {
    .hover-images-flex {
      display: block; /* owl handle karega */
    }

    .block-repeat-hover-card {
      width: 100%;
    }
  }
</style>

<section class="watcheshover-images-sec">
  <div class="watcheshover-images-container">
    <div class="hover-images-flex owl-carousel">
      {% for block in section.blocks %}
        <div class="block-repeat-hover-card">
          <a href="{{ block.settings.link_url }}" class="block-card-anker">
            <div class="block-hover-image-card">
              {% if block.settings.desktop_image != blank %}
                <img
                  class="show-image"
                  src="{{ block.settings.desktop_image | img_url: 'master' }}"
                  alt="{{ block.settings.card_title }}"
                >
              {% endif %}
              {% if block.settings.hover_image != blank %}
                <img
                  class="hover-image"
                  src="{{ block.settings.hover_image | img_url: 'master' }}"
                  alt="{{ block.settings.card_title }}"
                >
              {% endif %}
            </div>

            <div class="title-arrow-image">
              <div class="title-block-col">
                <h2 class="title-card">{{ block.settings.card_title }}</h2>
                <span class="arrow-image"><i class="fa fa-arrow-right"></i></span>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<script>
  $(document).ready(function () {
    if (window.innerWidth <= 768) {
      $('.hover-images-flex').owlCarousel({
        items: 1,
        loop: true,
        margin: 12,
        nav: false,
        dots: true,
      });
    }
  });
</script>

{% schema %}
{
  "name": "Watches Hover Images",
  "settings": [],
  "blocks": [
    {
      "type": "hover_card",
      "name": "Hover Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Watches Hover Images"
    }
  ]
}
{% endschema %}
