<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.6.0/css/all.min.css"
  rel="stylesheet"
>

<style>
  .hover-images-flex {
      display: flex;
      justify-content: space-between;
  }

  .block-repeat-hover-card {
      width: 25%;
      border-top: 1px solid #ccc;
      border-right: 1px solid #ccc;
      border-bottom: 1px solid #ccc;
      position: relative;
  }

  .block-card-anker {
      text-decoration: none;
      display: block;
  }

  .block-hover-image-card {
      position: relative;
      height: 0;
      padding-bottom: 120%;
  }

  .show-image,
  .hover-image {
      position: absolute;
      height: 100%;
      width: 100%;
      object-fit: cover;
      top: 0;
      left: 0;
      transition: all 0.3s ease-in-out;
  }

  .hover-image {
      opacity: 0;
  }

  .block-repeat-hover-card:hover .hover-image {
      opacity: 1;
  }

  .block-repeat-hover-card:hover .show-image {
      opacity: 0.3;
  }

  .title-block-col {
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease-in-out;
      border-top: 1px solid #cacaca;
      padding: 18px 0;
      position: relative;
  }

  .title-block-col .arrow-image {
      opacity: 0;
      margin-left: 10px;
      transition: all 0.3s ease-in-out;
      display: inline-block;
  }

  .block-repeat-hover-card:hover .title-block-col .arrow-image {
      opacity: 1;
  }

  .title-card {
      font-size: 14px;
      letter-spacing: 1px;
      color: #181818;
      font-family: TestDomaineDisplayRegular;
      text-transform: uppercase;
      margin: 0;
      transition: all 0.3s ease-in-out;
  }
</style>

<section class="watcheshover-images-sec">
  <div class="watcheshover-images-container">
    <div class="hover-images-flex">
      {% for block in section.blocks %}
        <div class="block-repeat-hover-card">
          <a href="{{ block.settings.link_url }}" class="block-card-anker">
            <div class="block-hover-image-card">
              {% if block.settings.desktop_image != blank %}
                <img
                  class="show-image"
                  src="{{ block.settings.desktop_image | img_url: 'master' }}"
                  alt="{{ block.settings.card_title }}"
                >
              {% endif %}
              {% if block.settings.hover_image != blank %}
                <img
                  class="hover-image"
                  src="{{ block.settings.hover_image | img_url: 'master' }}"
                  alt="{{ block.settings.card_title }}"
                >
              {% endif %}
            </div>

            <div class="title-arrow-image">
              <div class="title-block-col">
                <h2 class="title-card">{{ block.settings.card_title }}</h2>
                <span class="arrow-image"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><!--!Font Awesome Free v7.1.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2026 Fonticons, Inc.--><path d="M566.6 342.6C579.1 330.1 579.1 309.8 566.6 297.3L406.6 137.3C394.1 124.8 373.8 124.8 361.3 137.3C348.8 149.8 348.8 170.1 361.3 182.6L466.7 288L96 288C78.3 288 64 302.3 64 320C64 337.7 78.3 352 96 352L466.7 352L361.3 457.4C348.8 469.9 348.8 490.2 361.3 502.7C373.8 515.2 394.1 515.2 406.6 502.7L566.6 342.7z"/></svg></span>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Watches Hover Images",
  "settings": [],
  "blocks": [
    {
      "type": "hover_card",
      "name": "Hover Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Watches Hover Images"
    }
  ]
}
{% endschema %}
