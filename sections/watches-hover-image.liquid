<style>
.hover-images-flex {
    display: flex;
    justify-content: space-between;
    gap: 10px;
}

.block-repeat-hover-card {
    width: 25%;
    border-top: 1px solid #ccc;
    border-right: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    overflow: hidden;
    position: relative;
}

.block-hover-image-card {
    position: relative;
    height: 0;
    padding-bottom: 120%;
    overflow: hidden;
}

.show-image,
.hover-image {
    position: absolute;
    height: 100%;
    width: 100%;
    object-fit: cover;
    top: 0;
    left: 0;
    transition: all 0.3s ease-in-out;
}

.hover-image {
    opacity: 0;
}

.block-repeat-hover-card:hover .hover-image {
    opacity: 1;
}

.block-repeat-hover-card:hover .show-image {
    opacity: 0;
}

.title-arrow-image {
    position: absolute;
    bottom: 10px;
    left: 10px;
    color: #fff;
    display: flex;
    align-items: center;
}

.title-card {
    font-size: 16px;
    margin-right: 8px;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.6);
}

.arrow-image i {
    font-size: 16px;
}
</style>

<section class="watcheshover-images-sec">
  <div class="watcheshover-images-container">
    <div class="hover-images-flex">
      {% for block in section.blocks %}
        <div class="block-repeat-hover-card">
          <a href="{{ block.settings.link_url }}" class="block-card-anker">
            <div class="block-hover-image-card">
              {% if block.settings.desktop_image != blank %}
                <img
                  class="show-image"
                  src="{{ block.settings.desktop_image | img_url: 'master' }}"
                  alt="{{ block.settings.card_title }}"
                >
              {% endif %}
              {% if block.settings.hover_image != blank %}
                <img
                  class="hover-image"
                  src="{{ block.settings.hover_image | img_url: 'master' }}"
                  alt="{{ block.settings.card_title }}"
                >
              {% endif %}
            </div>

            <div class="title-arrow-image">
                <h2 class="title-card">{{ block.settings.card_title }}</h2>
                <span class="arrow-image">
                  <i class="fas fa-arrow-right"></i>
                </span>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Watches Hover Images",
  "settings": [],
  "blocks": [
    {
      "type": "hover_card",
      "name": "Hover Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Watches Hover Images"
    }
  ]
}
{% endschema %}
